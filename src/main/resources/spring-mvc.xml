<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
	  
	<context:component-scan base-package="com.best.oasis.wmsx.framework"/> 
	<context:component-scan base-package="com.jinhe.tss.framework.component"/> 
	<mvc:annotation-driven />
	
    <!-- 配置静态资源，直接映射到对应的文件夹，不被DispatcherServlet处理 -->  
    <mvc:resources mapping="/images/**" location="/img/"/>  
    <mvc:resources mapping="/css/**"    location="/css/"/>  
	<mvc:resources mapping="/framework/**" location="/framework/"/>  
	<mvc:resources mapping="/*.html" location="/"/>  
	
	<mvc:resources mapping="/data/**" location="/data/"/>  
 
</beans>