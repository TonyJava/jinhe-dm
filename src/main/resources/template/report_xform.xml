<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare prefix="report">	
		<column name="id"     caption="报表ID"  mode="number" editable="false"/>
		<column name="name"   caption="报表名称" mode="string" maxLength="30" empty="true"/>
		<column name="script" caption="报表脚本" mode="string" maxLength="4000"/>
		<column name="param"  caption="报表参数" mode="string" maxLength="400"/>
		<column name="datasource"  caption="数据源" mode="string" editor="comboedit"/>
		<column name="remark" caption="报表简介" mode="string" maxLength="400"/>
	</declare>
	<layout>
		<TR>
			<TD width="80"><label binding="id"/></TD>
			<TD><input binding="id" type="text" style="width:50px;"/></TD>
		</TR>
		<TR>
			<TD width="80"><label binding="name"/></TD>
			<TD><input binding="name" type="text" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD width="80" valign="top"><label binding="script"/></TD>
			<TD><textarea binding="script" style="width:95%;height:300"/></TD>
		</TR>
		<TR>
			<TD width="80" valign="top"><label binding="param"/></TD>
			<TD><textarea binding="param" style="width:95%;height:30"/></TD>
		</TR>
		<TR>
			<TD width="80"><label binding="datasource"/></TD>
			<TD><input binding="datasource" type="text" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD width="80" valign="top"><label binding="remark"/></TD>
			<TD><textarea binding="remark" style="width:95%;height:30"/></TD>
		</TR>
	</layout>
	<data/>
</xform>